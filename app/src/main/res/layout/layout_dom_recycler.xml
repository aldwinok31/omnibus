<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:id="@+id/card_recycler"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/holder_recycler"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/mysafety"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Creator"
                    android:textStyle="bold"
                    android:id="@+id/creator_recycler"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/timestamp_recycler"
                    android:layout_width="match_parent"
                    android:text="time"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/group_recycler"
                    android:layout_width="match_parent"
                    android:text="group"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_recycler"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="300dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Type"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:id="@+id/type_recycler"
            android:alpha="0.8"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title_recycler"
            android:layout_width="match_parent"
            android:text="title"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/description_recycler"
            android:layout_width="match_parent"
            android:paddingLeft="14dp"
            android:text="description"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="14dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/safe_holder"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Safe: "
                    android:textColor="#6666ff"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/marked_safe"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="14dp"
                android:id="@+id/unsafe_holder"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="No reply: "
                    android:textStyle="bold"
                    android:textColor="#ff4c4c"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/marked_unsafed"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>


